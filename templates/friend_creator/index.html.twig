{% extends 'base.html.twig' %}

{% block title %}Friend{% endblock %}

{% block back_button %}
    <a href="/dashboard/friends" class="d-flex text-decoration-none mt-3">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
        </svg>
        <h5 class="mt-1">Back</h5>
    </a>
{% endblock %}

{% block body %}

    <div class="d-none"> {% block register %} {% endblock%} </div>
    <div class="text-center">
        <h3 class="">Friend {{ friendType }} </h3>
    </div>
    <div class="row">
        <div class="col-sm-8 col-md-6 col-lg-5 col-xl-4 mx-auto">
            <div class="container form-control mt-2">
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}

